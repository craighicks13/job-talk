generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Episode {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  episode_id          Int
  published           DateTime
  title               String
  slug                String
  image               String
  banner_image        String
  youtube_preview     String
  youtube_full        String
  keywords            String[]
  preview_description String
  content             String
  transcript          String
  time                String
  audio               Audio
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

type Audio {
  src  String
  type String
}
